<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_game_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameStartActivity" >

    <TextView
        android:id="@+id/game_selection_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Game Selection"
        android:textColor="#E80000"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/game_availability_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_selection_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:text="No Game Currently Available."
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <Button
        android:id="@+id/create_or_join_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/game_availability_text"
        android:layout_alignRight="@+id/game_availability_text"
        android:layout_below="@+id/game_availability_text"
        android:layout_marginTop="248dp"
        android:text="CREATE GAME"
        android:onClick="toLobby" />

    <NumberPicker
        android:id="@+id/day_night_freq_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/game_selection_text"
        android:layout_below="@+id/game_availability_text"
        android:layout_marginTop="60dp"
        android:background="#777777" />

    <TextView
        android:id="@+id/day_night_freq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/day_night_freq_picker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="Day/Night Frequency:"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
